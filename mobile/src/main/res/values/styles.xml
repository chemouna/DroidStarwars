<resources>

  <style name="Widget.StarWars" parent="android:Widget" />

  <style name="Widget.StarWars.Toolbar">
    <item name="android:background">?android:colorPrimary</item>
    <item name="android:theme">@style/StarWarsDarkOverlay</item>
    <item name="android:minHeight">?attr/actionBarSize</item>
  </style>

  <!-- to theme toolbar with dark color in our app's light theme. we extend
    ThemeOverlay.AppCompat.Dark to get text styling -->
  <style name="StarWarsDarkOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">

  </style>

  <style name="Widget.StarWars.ProgressBar">

  </style>

  <style name="Widget.StarWars.PersonItem" parent="Base.TwoLinesIconItem">
  </style>

  <style name="Widget.StarWars.ResourceTitle" parent="TextAppearance.AppCompat.Small">
    <item name="android:textSize">14sp</item>
  </style>


</resources>
