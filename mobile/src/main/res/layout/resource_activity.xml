<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <!-- to have correct animations we need to fake our toolbar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="9dp">
        <TextView android:id="@+id/resource_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_very_large"
            android:paddingLeft="@dimen/spacing_very_large"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingTop="@dimen/spacing_small"
            android:paddingBottom="@dimen/spacing_small"
            android:minHeight="?actionBarSize"
            android:background="?colorPrimary"
            android:textAppearance="@style/StarWars.TextAppearance.Title"
            android:gravity="center_vertical"
            android:transitionName="@string/transition_with_toolbar"
            tools:ignore="UnusedAttribute,NewApi" />
        <ImageButton android:id="@+id/back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/spacing_double"
            android:contentDescription="@string/back_button"
            android:src="@drawable/ic_arrow_back"
            android:tint="?attr:titleColorPrimary"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/light_selector"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>